                <input type="text"  required class="ip"  name ="description" placeholder="Enter Description" >
                <br> 
                <label ><b>Image</b></label>
                
<input type="file"  required class="ip"  name ="img" placeholder="Enter Image Path/URL"  >
                <br>
                
                  
                  <button type="submit" class="signupbtn" style="float:left green">Add Book</button>
                
